<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>User List</title>
    <link rel="stylesheet" href="/styles.css" />
  </head>
  <body>
    <div class="container">
      <h1>User List</h1>

      <% if (users && users.length > 0) { %>
      <ul class="user-list">
        <% users.forEach(user => { %>
        <li>
          <h2><%= user.username %></h2>
          <p><%= user.about %></p>
        </li>
        <% }); %>
      </ul>
      <% } else { %>
      <p>No users found.</p>
      <% } %>

      <a href="/">Back to Home</a>
    </div>
  </body>
</html>
